{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "src/**/*.html",
            "options": {
                "printWidth": 300
            }
        },
        {
            "files": "src/**/*.js",
            "options": {
                "printWidth": 200
            }
        },
        {
            "files": "src/**/*.jsx",
            "options": {
                "printWidth": 200
            }
        }
    ]
}